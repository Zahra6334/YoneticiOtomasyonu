@model IEnumerable<YoneticiOtomasyonu.Models.ViewModels.BuildingWithRoleViewModel>

@{
    ViewData["Title"] = "Bina Yönetimi";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Bina Yönetimi</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Bina Ekle
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Bina Listesi</h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" asp-action="Create"><i class="fas fa-plus mr-2"></i>Yeni Ekle</a>
                    <a class="dropdown-item" href="#" id="exportData"><i class="fas fa-file-export mr-2"></i>Dýþa Aktar</a>
                    <a class="dropdown-item" asp-action="MyBuildings"><i class="fas fa-building mr-2"></i>Binalarým</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Bina Adý</th>
                            <th>Adres</th>
                            <th>Tür</th>
                            <th>Kat Sayýsý</th>
                            <th>Birim Sayýsý</th>
                            <th>Oluþturulma Tarihi</th>
                            <th>Rolüm</th>
                            <th>Ýþlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.Building.ImageUrl))
                                        {
                                            <img src="@item.Building.ImageUrl" class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;" alt="Bina Görseli">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; background-color: #4e73df; color: white;">
                                                <i class="fas fa-building"></i>
                                            </div>
                                        }

                                        <strong>
                                            @item.Building.Name
                                            @if (!string.IsNullOrEmpty(item.Building.Block))
                                            {
                                                <span>(@item.Building.Block)</span>
                                            }
                                        </strong>
                                    </div>

                                </td>
                                <td>@item.Building.Address</td>
                                <td>
                                    <span class="badge badge-pill
                                          @(item.Building.Type == "Apartman" ? "badge-primary" :
                                            item.Building.Type == "Site" ? "badge-success" :
                                            item.Building.Type == "Ýþ Merkezi" ? "badge-info" :
                                            item.Building.Type == "Rezidans" ? "badge-warning" : "badge-secondary")">
                                        @item.Building.Type
                                    </span>
                                </td>
                                <td class="font-weight-bold">@item.Building.FloorCount</td>
                                <td class="font-weight-bold">@item.Building.UnitCount</td>
                                <td>@item.Building.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge
                                        @(item.Role == "Yönetici" ? "badge-success" :
                                          item.Role == "Kiracý" ? "badge-primary" :
                                          item.Role == "Görevli" ? "badge-info" : "badge-secondary")">
                                        @item.Role
                                    </span>
                                </td>
                                <td>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Building.Id">
                                                <i class="fas fa-eye mr-2"></i>Detaylarý Görüntüle
                                            </a>

                                            @if (item.Role == "Yönetici" || User.IsInRole("SuperAdmin"))
                                            {
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Building.Id">
                                                    <i class="fas fa-edit mr-2"></i>Düzenle
                                                </a>
                                            }

                                            <a class="dropdown-item" asp-action="List" asp-controller="Units" asp-route-buildingId="@item.Building.Id">
                                                <i class="fas fa-building mr-2"></i>Birimleri Gör
                                            </a>
                                            <a class="dropdown-item" asp-action="Index" asp-controller="Income" asp-route-buildingId="@item.Building.Id">
                                                <i class="fas fa-coins mr-2"></i>Gelirler
                                            </a>
                                            <a class="dropdown-item" asp-action="Index" asp-controller="Expense" asp-route-buildingId="@item.Building.Id">
                                                <i class="fas fa-coins mr-2"></i>Giderler
                                            </a>
                                            <a class="dropdown-item" asp-action="Index" asp-controller="Complaint" asp-route-buildingId="@item.Building.Id">
                                                <i class="fas fa-coins mr-2"></i>þikayetler
                                            </a>


                                            @if (item.Role == "Yönetici" || User.IsInRole("SuperAdmin"))
                                            {
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Building.Id">
                                                    <i class="fas fa-trash-alt mr-2"></i>Sil
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <style>
        .card {
            border: none;
            border-radius: 0.35rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .table thead th {
            border-bottom: 1px solid #e3e6f0;
            font-size: 0.75rem;
            font-weight: 700;
            letter-spacing: 0.05rem;
            text-transform: uppercase;
            padding: 1rem;
        }

        .table td {
            vertical-align: middle;
            padding: 0.75rem;
        }

        .dropdown-menu {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            font-size: 0.85rem;
        }

        .badge {
            font-size: 0.75em;
            font-weight: 600;
            padding: 0.35em 0.65em;
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
        }

            .btn-primary:hover {
                background-color: #2e59d9;
                border-color: #2653d4;
            }

        .role-badge {
            min-width: 70px;
            display: inline-block;
            text-align: center;
        }
    </style>
}

@section Scripts {
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                responsive: true,
                "language": {
                    "lengthMenu": "Sayfa baþýna _MENU_ kayýt göster",
                    "zeroRecords": "Kayýt bulunamadý",
                    "info": "Sayfa _PAGE_ / _PAGES_",
                    "infoEmpty": "Kayýt bulunamadý",
                    "infoFiltered": "(_MAX_ kayýt içerisinden filtrelendi)",
                    "search": "Ara:",
                    "paginate": {
                        "previous": "Önceki",
                        "next": "Sonraki"
                    }
                },
                dom: '<"top"lf>rt<"bottom"ip><"clear">'
            });

            // Export data functionality
            $('#exportData').click(function (e) {
                e.preventDefault();
                // You can implement export functionality here
                alert('Dýþa aktarma iþlemi baþlatýldý');
                // Example: window.location.href = '/Buildings/Export';
            });
        });
    </script>
}