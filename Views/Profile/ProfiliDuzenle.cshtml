@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // DOM elementlerini seç
            const profileImageInput = document.getElementById('profileImageInput');
            const profileImagePreview = document.getElementById('profileImagePreview');
            const removeAvatarBtn = document.getElementById('removeAvatarBtn');
            const rotateAvatarBtn = document.getElementById('rotateAvatarBtn');
            const avatarPreview = document.getElementById('avatarPreview');
            const avatarLoader = document.getElementById('avatarLoader');
            let rotationAngle = 0;
            const defaultAvatarUrl = '/images/default-avatar.jpg';

            // Fotoğraf yükleme işlevselliği
            if (profileImageInput) {
                profileImageInput.addEventListener('change', function (e) {
                    const file = e.target.files[0];
                    if (file) {
                        // Dosya validasyonları
                        const validImageTypes = ['image/jpeg', 'image/png', 'image/webp'];
                        if (!validImageTypes.includes(file.type)) {
                            showAlert('Hata', 'Sadece JPEG, PNG veya WebP formatında resimler yükleyebilirsiniz!', 'error');
                            e.target.value = '';
                            return;
                        }

                        if (file.size > 2 * 1024 * 1024) {
                            showAlert('Hata', 'Dosya boyutu 2MB\'dan büyük olamaz!', 'error');
                            e.target.value = '';
                            return;
                        }

                        // Yükleme animasyonunu göster
                        avatarLoader.classList.add('active');
                        rotationAngle = 0; // Yeni fotoğraf yüklendiğinde rotasyonu sıfırla

                        // Simüle edilmiş yükleme (gerçek uygulamada bu kaldırılır)
                        setTimeout(() => {
                            const reader = new FileReader();
                            reader.onload = function (event) {
                                profileImagePreview.src = event.target.result;
                                profileImagePreview.classList.add('loaded');
                                avatarLoader.classList.remove('active');
                            };
                            reader.readAsDataURL(file);
                        }, 800);
                    }
                });

                // Avatar alanına tıklandığında veya Enter'a basıldığında dosya seçiciyi aç
                avatarPreview.addEventListener('click', function () {
                    profileImageInput.click();
                });

                avatarPreview.addEventListener('keydown', function (e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        profileImageInput.click();
                    }
                });
            }

            // Fotoğraf kaldırma butonu
            if (removeAvatarBtn) {
                removeAvatarBtn.addEventListener('click', function () {
                    profileImagePreview.src = defaultAvatarUrl;
                    profileImageInput.value = '';
                    profileImagePreview.classList.remove('loaded');
                    rotationAngle = 0;
                    profileImagePreview.style.transform = 'rotate(0deg)';
                });
            }

            // Fotoğraf döndürme butonu
            if (rotateAvatarBtn) {
                rotateAvatarBtn.addEventListener('click', function () {
                    rotationAngle += 90;
                    if (rotationAngle >= 360) rotationAngle = 0;
                    profileImagePreview.style.transform = `rotate(${rotationAngle}deg)`;
                });
            }

            // TCKN maskesi
            const tcknInput = document.getElementById('TCKN');
            if (tcknInput) {
                tcknInput.addEventListener('input', function (e) {
                    this.value = this.value.replace(/[^0-9]/g, '').slice(0, 11);
                });
            }

            // Telefon numarası formatlama
            const phoneInputs = document.querySelectorAll('input[id^="PhoneNumber"]');
            phoneInputs.forEach(input => {
                input.addEventListener('input', function (e) {
                    this.value = this.value.replace(/[^0-9]/g, '');
                });
            });

            // Form gönderiminde yükleniyor efekti
            const form = document.querySelector('.profile-form');
            if (form) {
                form.addEventListener('submit', function (e) {
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Kaydediliyor...';
                        submitBtn.disabled = true;
                        submitBtn.setAttribute('aria-busy', 'true');
                    }
                });
            }

            // Alert fonksiyonu
            function showAlert(title, message, type) {
                // Burada bir toast veya modal kütüphanesi kullanılabilir
                // Örnek olarak basit bir alert
                alert(`${title}: ${message}`);
            }
        });
    </script>
}