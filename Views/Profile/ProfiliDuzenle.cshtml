@model YoneticiOtomasyonu.Models.ViewModels.ProfileEditViewModel

@{
    ViewData["Title"] = "Profil Düzenle";
}

<div class="profile-edit-container">
    <!-- Başlık ve breadcrumb -->
    <div class="profile-header">
        <div class="header-content">
            <div class="header-top">
                <h1 class="profile-title">Profil Ayarları</h1>
                <div class="header-actions">
                    <a href="@Url.Action("Index", "Home")" class="btn-back">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </div>
            <nav class="breadcrumb-nav" aria-label="breadcrumb">
                <ol>
                    <li><a href="/">Anasayfa</a></li>
                    <li><span class="divider">/</span></li>
                    <li aria-current="page">Profil Düzenle</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Ana içerik kartı -->
    <div class="profile-edit-card">
        <form asp-action="ProfiliDuzenle" method="post" enctype="multipart/form-data" class="profile-form">
            <div class="form-grid">
                <!-- Profil Fotoğrafı Bölümü -->
                <div class="photo-section">
                    <div class="avatar-upload">
                        <div class="avatar-preview-container">
                            <div class="avatar-preview" id="avatarPreview" tabindex="0">
                                <img src="@Model.CurrentProfileImageUrl" id="profileImagePreview" class="profile-avatar" alt="Profil fotoğrafı">
                                <div class="upload-overlay">
                                    <i class="fas fa-camera"></i>
                                    <span>Fotoğraf Değiştir</span>
                                </div>
                                <div class="avatar-loader" id="avatarLoader">
                                    <div class="loader-spinner"></div>
                                </div>
                            </div>
                            <input type="file" id="profileImageInput" asp-for="ProfileImage" accept="image/*" class="avatar-input">
                        </div>
                        <div class="avatar-notes">
                            <p class="file-info">JPEG veya PNG (Max. 2MB)</p>
                            <div class="avatar-actions">
                                <button type="button" class="btn-remove-avatar" id="removeAvatarBtn">
                                    <i class="fas fa-trash-alt"></i> Fotoğrafı Kaldır
                                </button>
                                <button type="button" class="btn-rotate-avatar" id="rotateAvatarBtn" title="Fotoğrafı Döndür">
                                    <i class="fas fa-redo-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ana Form Bölümü -->
                <div class="main-form-section">
                    <!-- Temel Bilgiler Bölümü -->
                    <div class="form-section">
                        <div class="section-header">
                            <h2 class="section-title">
                                <i class="fas fa-user-circle"></i> Temel Bilgiler
                            </h2>
                            <div class="section-divider"></div>
                        </div>

                        <div class="form-row duo">
                            <div class="form-group">
                                <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-user"></i>
                                    <input asp-for="UserName" class="form-control" required>
                                </div>
                                <span asp-validation-for="UserName" class="validation-error"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">E-posta</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-envelope"></i>
                                    <input asp-for="Email" type="email" class="form-control" required>
                                </div>
                                <span asp-validation-for="Email" class="validation-error"></span>
                            </div>
                        </div>

                        <div class="form-row duo">
                            <div class="form-group">
                                <label asp-for="FullName" class="form-label">Tam Ad</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-id-card"></i>
                                    <input asp-for="FullName" class="form-control" required>
                                </div>
                                <span asp-validation-for="FullName" class="validation-error"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TCKN" class="form-label">T.C. Kimlik No</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-id-badge"></i>
                                    <input asp-for="TCKN" class="form-control" maxlength="11" pattern="\d{11}" inputmode="numeric">
                                </div>
                                <span asp-validation-for="TCKN" class="validation-error"></span>
                            </div>
                        </div>

                        <div class="form-row duo">
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-phone"></i>
                                    <input asp-for="PhoneNumber" class="form-control" required>
                                </div>
                                <span asp-validation-for="PhoneNumber" class="validation-error"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber2" class="form-label">İkinci Telefon</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-phone-alt"></i>
                                    <input asp-for="PhoneNumber2" class="form-control">
                                </div>
                                <span asp-validation-for="PhoneNumber2" class="validation-error"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="form-label">Adres</label>
                            <div class="input-with-icon">
                                <i class="fas fa-map-marker-alt"></i>
                                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                            </div>
                            <span asp-validation-for="Address" class="validation-error"></span>
                        </div>
                    </div>

                    <!-- Ek Bilgiler Bölümü -->
                    <div class="form-section">
                        <div class="section-header">
                            <h2 class="section-title">
                                <i class="fas fa-info-circle"></i> Ek Bilgiler
                            </h2>
                            <div class="section-divider"></div>
                        </div>

                        <div class="form-row trio">
                            <div class="form-group">
                                <label asp-for="BirthDate" class="form-label">Doğum Tarihi</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-birthday-cake"></i>
                                    <input asp-for="BirthDate" type="date" class="form-control">
                                </div>
                                <span asp-validation-for="BirthDate" class="validation-error"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BloodType" class="form-label">Kan Grubu</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-tint"></i>
                                    <select asp-for="BloodType" class="form-control">
                                        <option value="">Seçiniz</option>
                                        <option value="A+">A Rh+</option>
                                        <option value="A-">A Rh-</option>
                                        <option value="B+">B Rh+</option>
                                        <option value="B-">B Rh-</option>
                                        <option value="AB+">AB Rh+</option>
                                        <option value="AB-">AB Rh-</option>
                                        <option value="0+">0 Rh+</option>
                                        <option value="0-">0 Rh-</option>
                                    </select>
                                </div>
                                <span asp-validation-for="BloodType" class="validation-error"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EmergencyContact" class="form-label">Acil Durum İletişim</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <input asp-for="EmergencyContact" class="form-control">
                                </div>
                                <span asp-validation-for="EmergencyContact" class="validation-error"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Notes" class="form-label">Notlar</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="validation-error"></span>
                        </div>
                    </div>

                    <!-- Bina Rolleri Bölümü -->
                    <div class="form-section">
                        <div class="section-header">
                            <h2 class="section-title">
                                <i class="fas fa-building"></i> Bina Rollerim
                            </h2>
                            <div class="section-divider"></div>
                        </div>

                        <div class="building-roles-table">
                            <div class="table-responsive">
                                <table class="roles-table">
                                    <thead>
                                        <tr>
                                            <th>Bina Adı</th>
                                            <th>Rolüm</th>
                                            <th>Ana Bina</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.BuildingRoles == null || !Model.BuildingRoles.Any())
                                        {
                                            <tr>
                                                <td colspan="3" class="text-center">Henüz bir bina rolü eklenmemiş.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                             @foreach (var role in Model.BuildingRoles)
                                        {
                                        <tr>
                                            <td>@role.BuildingName</td>
                                            <td>
                                                <span class="role-badge">@role.Role</span>
                                            </td>
                                            <td>
                                                @if (role.IsPrimary)
                                                {
                                                <span class="status-badge primary">
                                                    <i class="fas fa-check"></i> Evet
                                                </span>
                                                }
                                                else
                                                {
                                                <span class="status-badge secondary">
                                                    <i class="fas fa-times"></i> Hayır
                                                </span>
                                                }
                                            </td>
                                        </tr>
                                        }                                            
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Form Butonları -->
                    <div class="form-actions">
                        <button type="submit" class="btn-save">
                            <i class="fas fa-save"></i> Değişiklikleri Kaydet
                        </button>
                        <button type="reset" class="btn-reset">
                            <i class="fas fa-undo"></i> Sıfırla
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4f46e5;
            --primary-hover: #4338ca;
            --primary-light: #e0e7ff;
            --secondary-color: #64748b;
            --secondary-light: #f1f5f9;
            --danger-color: #ef4444;
            --danger-light: #fee2e2;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --info-color: #3b82f6;
            --light-bg: #f8fafc;
            --border-color: #e2e8f0;
            --border-dark: #cbd5e1;
            --text-color: #1e293b;
            --text-light: #64748b;
            --text-lighter: #94a3b8;
            --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
            --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -1px rgba(0,0,0,0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0,0,0,0.1), 0 10px 10px -5px rgba(0,0,0,0.04);
            --radius-sm: 0.375rem;
            --radius-md: 0.5rem;
            --radius-lg: 0.75rem;
            --radius-xl: 1rem;
            --radius-full: 9999px;
            --transition: all 0.2s ease-in-out;
            --transition-slow: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            color: var(--text-color);
            line-height: 1.5;
            background-color: #f9fafb;
        }

        .profile-edit-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1.5rem;
        }

        .profile-header {
            margin-bottom: 2rem;
        }

        .header-content {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .header-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .profile-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--text-color);
            margin: 0;
            line-height: 1.2;
        }

        .header-actions {
            display: flex;
            gap: 0.75rem;
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background-color: white;
            color: var(--primary-color);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-md);
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            transition: var(--transition);
            box-shadow: var(--shadow-sm);
        }

            .btn-back:hover {
                background-color: var(--primary-light);
                border-color: var(--primary-color);
            }

            .btn-back i {
                font-size: 0.875rem;
            }

        .breadcrumb-nav ol {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin: 0;
            padding: 0;
            list-style: none;
            font-size: 0.875rem;
            color: var(--text-light);
        }

        .breadcrumb-nav li {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .breadcrumb-nav a {
            color: var(--primary-color);
            text-decoration: none;
            transition: var(--transition);
        }

            .breadcrumb-nav a:hover {
                text-decoration: underline;
                color: var(--primary-hover);
            }

        .divider {
            color: var(--text-lighter);
            font-size: 0.75rem;
        }

        .profile-edit-card {
            background: white;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            overflow: hidden;
            transition: var(--transition-slow);
        }

            .profile-edit-card:hover {
                box-shadow: var(--shadow-lg);
            }

        .profile-form {
            padding: 2rem;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 240px 1fr;
            gap: 2rem;
        }

        .photo-section {
            position: relative;
        }

        .avatar-upload {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1.25rem;
            position: sticky;
            top: 1.5rem;
        }

        .avatar-preview-container {
            position: relative;
            width: 200px;
            height: 200px;
        }

        .avatar-preview {
            width: 100%;
            height: 100%;
            border-radius: var(--radius-full);
            position: relative;
            overflow: hidden;
            border: 3px solid var(--border-color);
            cursor: pointer;
            transition: var(--transition-slow);
            transform-origin: center center;
            background-color: var(--light-bg);
            outline: none;
        }

            .avatar-preview:hover, .avatar-preview:focus {
                border-color: var(--primary-color);
                transform: scale(1.03);
                box-shadow: var(--shadow-md);
            }

        .profile-avatar {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition-slow);
            transform: rotate(0deg);
        }

        .upload-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.6);
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            opacity: 0;
            transition: var(--transition-slow);
            pointer-events: none;
        }

        .avatar-preview:hover .upload-overlay,
        .avatar-preview:focus .upload-overlay {
            opacity: 1;
        }

        .avatar-input {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

        .avatar-loader {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
            transition: var(--transition);
        }

            .avatar-loader.active {
                opacity: 1;
            }

        .loader-spinner {
            width: 2rem;
            height: 2rem;
            border: 3px solid var(--border-color);
            border-top-color: var(--primary-color);
            border-radius: var(--radius-full);
            animation: spin 1s linear infinite;
        }

        .avatar-notes {
            text-align: center;
            font-size: 0.8125rem;
            color: var(--text-light);
            margin-top: 0.5rem;
        }

        .file-info {
            margin: 0 0 0.75rem 0;
        }

        .avatar-actions {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }

        .btn-remove-avatar {
            background: none;
            border: none;
            color: var(--danger-color);
            cursor: pointer;
            font-size: 0.8125rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.375rem;
            transition: var(--transition);
            padding: 0.375rem 0.75rem;
            border-radius: var(--radius-md);
        }

            .btn-remove-avatar:hover {
                background-color: var(--danger-light);
            }

        .btn-rotate-avatar {
            background: none;
            border: none;
            color: var(--secondary-color);
            cursor: pointer;
            font-size: 0.8125rem;
            width: 2rem;
            height: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: var(--radius-full);
            transition: var(--transition);
        }

            .btn-rotate-avatar:hover {
                background-color: var(--secondary-light);
                color: var(--text-color);
            }

        .main-form-section {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        .form-section {
            margin-bottom: 0;
        }

        .section-header {
            margin-bottom: 1.25rem;
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-color);
            margin: 0 0 0.75rem 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .section-title i {
                color: var(--primary-color);
                font-size: 1.1em;
            }

        .section-divider {
            height: 1px;
            background: linear-gradient(to right, var(--primary-color), transparent);
            width: 100%;
            opacity: 0.2;
        }

        .form-row {
            display: grid;
            gap: 1.25rem;
            margin-bottom: 1.25rem;
        }

            .form-row:last-child {
                margin-bottom: 0;
            }

        .duo {
            grid-template-columns: repeat(2, 1fr);
        }

        .trio {
            grid-template-columns: repeat(3, 1fr);
        }

        .form-group {
            margin-bottom: 0;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--text-color);
            font-size: 0.875rem;
        }

        .input-with-icon {
            position: relative;
        }

            .input-with-icon i {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: var(--text-light);
                font-size: 1rem;
                z-index: 1;
            }

        .form-control {
            width: 100%;
            padding: 0.625rem 1rem 0.625rem 2.5rem;
            border: 1px solid var(--border-color);
            border-radius: var(--radius-md);
            font-size: 0.875rem;
            transition: var(--transition);
            height: 2.75rem;
            background-color: white;
            color: var(--text-color);
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.15);
                outline: none;
            }

        textarea.form-control {
            min-height: 6rem;
            padding: 0.75rem 1rem 0.75rem 2.5rem;
            resize: vertical;
            line-height: 1.5;
        }

        select.form-control {
            appearance: none;
            background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 1rem;
            padding-right: 2.25rem;
        }

        .validation-error {
            display: block;
            margin-top: 0.375rem;
            font-size: 0.75rem;
            color: var(--danger-color);
            min-height: 1.125rem;
        }

        .building-roles-table {
            border: 1px solid var(--border-color);
            border-radius: var(--radius-md);
            overflow: hidden;
            box-shadow: var(--shadow-sm);
        }

        .roles-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.875rem;
        }

            .roles-table th {
                background-color: var(--light-bg);
                padding: 0.875rem 1rem;
                text-align: left;
                font-weight: 600;
                color: var(--text-color);
                border-bottom: 1px solid var(--border-color);
            }

            .roles-table td {
                padding: 0.875rem 1rem;
                border-bottom: 1px solid var(--border-color);
                vertical-align: middle;
            }

            .roles-table tr:last-child td {
                border-bottom: none;
            }

        .role-badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            background-color: var(--primary-light);
            color: var(--primary-color);
            border-radius: var(--radius-full);
            font-size: 0.8125rem;
            font-weight: 500;
            white-space: nowrap;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.25rem 0.75rem;
            border-radius: var(--radius-full);
            font-size: 0.8125rem;
            font-weight: 500;
            white-space: nowrap;
        }

            .status-badge i {
                font-size: 0.75rem;
            }

            .status-badge.primary {
                background-color: #ecfdf5;
                color: #059669;
            }

            .status-badge.secondary {
                background-color: var(--secondary-light);
                color: var(--text-light);
            }

        .form-actions {
            display: flex;
            gap: 0.75rem;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border-color);
            flex-wrap: wrap;
        }

        .btn-save {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: var(--radius-md);
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: var(--shadow-sm);
        }

            .btn-save:hover {
                background-color: var(--primary-hover);
