@model YoneticiOtomasyonu.Models.DuesSetting

<h2>@ViewBag.BuildingName binasına Aidat Bilgisi Ekle</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="BuildingId" />

    <div class="form-group">
        <label>Aidat Miktarı</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Toplanma Günü (1-31)</label>
        <input asp-for="CollectionDay" class="form-control" />
        <span asp-validation-for="CollectionDay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" asp-route-buildingId="@Model.BuildingId" class="btn btn-secondary">Geri</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
