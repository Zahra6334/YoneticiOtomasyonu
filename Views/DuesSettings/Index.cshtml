@model IEnumerable<YoneticiOtomasyonu.Models.ViewModels.DuesSettingViewModel>

<h2 class="d-inline-block">Aidat Bilgileri</h2>
<a asp-action="Create" asp-route-buildingId="@ViewBag.BuildingId" class="btn btn-primary float-end">Yeni Aidat Bilgisi Ekle</a>

@{
    var buildingId = ViewBag.BuildingId ?? 0;
    var debtsExist = ViewBag.DebtsExist as bool? ?? false;
}

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Bina</th>
            <th>Miktar (₺)</th>
            <th>Toplanma Günü</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BuildingName</td>
                <td>@item.Amount.ToString("N2")</td>
                <td>@item.CollectionDay</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    @if (!debtsExist)
                    {
                        <form asp-action="AssignDues" method="post" style="display:inline;">
                            <input type="hidden" name="buildingId" value="@item.BuildingId" />
                            <button type="submit" class="btn btn-sm btn-success">Aidatları Ata</button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-secondary" disabled>Bu ay atandı</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info mt-2">@TempData["Message"]</div>
}
