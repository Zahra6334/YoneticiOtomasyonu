@model List<YoneticiOtomasyonu.Models.Announcement>

@{
    ViewData["Title"] = "Duyurular";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Duyurular</h2>
    <a asp-action="Create" asp-route-buildingId="@ViewBag.BuildingId" class="btn btn-success">
        <i class="fas fa-plus me-1"></i> Duyuru Oluştur
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz duyuru bulunmuyor.</div>
}
else
{
    <div class="row g-3">
        @foreach (var announcement in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    @if (announcement.Images != null && announcement.Images.Any())
                    {
                        <img src="@announcement.Images.First().ImageUrl" class="card-img-top" style="object-fit: cover; height: 200px;" alt="Duyuru Görseli">
                    }
                    else
                    {
                        <img src="/images/no-image.png" class="card-img-top" style="object-fit: cover; height: 200px;" alt="Varsayılan Görsel">
                    }

                    <div class="card-body">
                        <h5 class="card-title">@announcement.Title</h5>
                        <p class="card-text text-truncate">@announcement.Content</p>
                        <p class="mb-1"><small>Bina: @announcement.Building?.Name ?? "—"</small></p>
                        <p><small>Tarih: @announcement.CreatedAt.ToString("dd.MM.yyyy")</small></p>

                        <a asp-action="Detail" asp-route-id="@announcement.Id" class="btn btn-sm btn-primary">Detay</a>
                        <a asp-action="Edit" asp-route-id="@announcement.Id" class="btn btn-warning mt-2">
                            <i class="fas fa-edit me-1"></i> Düzenle
                        </a>

                        <form asp-action="DeleteConfirmed" asp-route-id="@announcement.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger mt-2" onclick="return confirm('Bu duyuruyu silmek istediğinize emin misiniz?');">
                                <i class="fas fa-trash me-1"></i> Sil
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
