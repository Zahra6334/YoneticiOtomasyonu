@model YoneticiOtomasyonu.Models.Expense

@{
    ViewData["Title"] = "Gider Detayı";
}

<h1>Gider Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tür</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Miktar</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Ödeme Yöntemi</dt>
        <dd class="col-sm-10">@Model.PaymentMethod</dd>

        <dt class="col-sm-2">Fiş No</dt>
        <dd class="col-sm-10">@Model.ReceiptNumber</dd>

        <dt class="col-sm-2">Fiş Resmi</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ReceiptImageUrl))
            {
                <a href="@Model.ReceiptImageUrl" target="_blank">
                    <img src="@Model.ReceiptImageUrl" style="width:120px; height:auto;" />
                </a>
            }
            else
            {
                <span>Yok</span>
            }
        </dd>

        <dt class="col-sm-2">Kaydeden</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.RecordedBy?.ProfileImageUrl))
            {
                <img src="@Model.RecordedBy.ProfileImageUrl" style="width:30px; height:30px; border-radius:50%; object-fit:cover; margin-right:5px;" />
            }
            @Model.RecordedBy?.UserName
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
<a asp-action="Index" asp-route-buildingId="@Model.BuildingId" class="btn btn-secondary">Listeye Dön</a>
