@model YoneticiOtomasyonu.Models.Expense

@{
    ViewData["Title"] = "Gider Düzenle";
}

<h1>Gider Düzenle</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="BuildingId" />
<div class="form-group">
    <label asp-for="Type"></label>
    <select asp-for="Type" class="form-control">
        <option value="">Seçiniz</option>
            @foreach (var type in ViewBag.ExpenseTypes as List<string>)
            {
                if (Model.Type == type)
                {
                    <option value="@type" selected>@type</option>
                }
                else
                {
                    <option value="@type">@type</option>
                }
            }

    </select>
    <span asp-validation-for="Type" class="text-danger"></span>
</div>


    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
    <label asp-for="PaymentMethod"></label>
    <select asp-for="PaymentMethod" class="form-control">
        <option value="">Seçiniz</option>
            @foreach (var method in ViewBag.PaymentMethods as List<string>)
            {
                if (Model.PaymentMethod == method)
                {
                    <option value="@method" selected>@method</option>
                }
                else
                {
                    <option value="@method">@method</option>
                }
            }

    </select>
    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
</div>


    <div class="form-group">
        <label asp-for="ReceiptNumber"></label>
        <input asp-for="ReceiptNumber" class="form-control" />
        <span asp-validation-for="ReceiptNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Mevcut Fiş / Dosya</label><br />
        @if (!string.IsNullOrEmpty(Model.ReceiptImageUrl))
        {
            var fileExtension = System.IO.Path.GetExtension(Model.ReceiptImageUrl).ToLower();
            var imageExtensions = new[] { ".jpg", ".jpeg", ".png", ".gif", ".webp" };

            if (imageExtensions.Contains(fileExtension))
            {
                <a href="@Model.ReceiptImageUrl" target="_blank">
                    <img src="@Model.ReceiptImageUrl" style="width:60px; height:60px; object-fit:cover;" />
                </a>
            }
            else
            {
                <a href="@Model.ReceiptImageUrl" target="_blank" title="Dosyayı aç">
                    <i class="fas fa-file-alt fa-2x"></i>
                </a>
            }
        }
        else
        {
            <span>Yüklenmiş fiş yok</span>
        }
    </div>

    <div class="form-group">
        <label>Yeni Fiş / Dosya Yükle (varsa)</label>
        <input type="file" name="NewReceiptFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Index" asp-route-buildingId="@Model.BuildingId" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
