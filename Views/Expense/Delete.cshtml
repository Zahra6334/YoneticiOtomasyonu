@model YoneticiOtomasyonu.Models.Expense

@{
    ViewData["Title"] = "Gider Sil";
}

<h1>Gider Sil</h1>

<h3>Bu gider kaydını silmek istediğinize emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tür</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Miktar</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" asp-route-buildingId="@Model.BuildingId" class="btn btn-secondary">İptal</a>
</form>
