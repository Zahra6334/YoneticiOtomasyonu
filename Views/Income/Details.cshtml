@model YoneticiOtomasyonu.Models.Income

@{
    ViewData["Title"] = "Gelir Detay";
}

<h1>Gelir Detay</h1>

<div>
    <h4>Gelir Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tür</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Miktar</dt>
        <dd class="col-sm-10">@Model.Amount ₺</dd>

        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Ödeme Yöntemi</dt>
        <dd class="col-sm-10">@Model.PaymentMethod</dd>

        <dt class="col-sm-2">Bina</dt>
        <dd class="col-sm-10">@Model.Building?.Name</dd>

        <dt class="col-sm-2">Birim</dt>
        <dd class="col-sm-10">@Model.Unit?.Number</dd>

        <dt class="col-sm-2">Ödeyen</dt>
        <dd class="col-sm-10">@Model.Payer?.UserName</dd>

        <dt class="col-sm-2">Kaydeden</dt>
        <dd class="col-sm-10">@Model.RecordedBy?.UserName</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>
