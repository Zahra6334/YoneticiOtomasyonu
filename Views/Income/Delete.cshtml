@model YoneticiOtomasyonu.Models.Income

@{
    ViewData["Title"] = "Gelir Sil";
}

<h1>Gelir Sil</h1>

<div>
    <h4>@Model.Type - @Model.Amount TL</h4>
    <p>@Model.Description</p>
</div>

<form asp-action="Delete">
